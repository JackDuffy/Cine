                card_view:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/search_result_5_poster"
                android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/search_result_6"
